{% macro menu() %}
<div class="wrapper ">
    <div class="sidebar" data-color="blue">
        <!--
        Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
    -->
        <div class="logo">
           <img src="{{ base_url() }}assets/img/logo.png" alt="Symfony!"  width="200" height="100"/>
        </div>
        <div class="sidebar-wrapper" id="sidebar-wrapper">
            <ul class="nav">
                {% set foo = uri_string('3') %} 
                <li class="{% if foo == 'Welcome/perfil' %} active {% endif %}">
                    <a href="{{ base_url() }}Welcome/perfil">
                        <i class="now-ui-icons users_single-02"></i>
                        <font color=#0041ff><p>Perfil</p></font>
                    </a>
                </li>
                <li class="{% if foo == 'Canales' %} active {% endif %}">
                    <a href="{{ base_url()}}Canales">
                        <i class="now-ui-icons education_atom"></i>
                        <font color=#0041ff><p>Canales</p></font>
                    </a>
                </li>
                <li class="{% if foo == 'otros' %} active {% endif %}">
                    <a href="{{ base_url()}}Canales">
                        <i class="fas fa-archive"></i>
                        <font color=#0041ff><p>otros</p></font>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    {% endmacro %}

